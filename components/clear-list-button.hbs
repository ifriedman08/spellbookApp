<button id="clear-known-spells" type="button" class="btn btn-danger btn-lg" style="width:100%" data-toggle="modal" data-target="#myModal">Clear known spells</button>

<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Clear Known Spells</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        Are you sure you want to clear your list of known spells?
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Never mind</button>
        <button id="confirm-clear-known-spells" type="button" class="btn btn-primary">Yes! Clear my spells</button>
      </div>
    </div>
  </div>
</div>

<style media="screen">

</style>

<script type="text/javascript">
  $('button#confirm-clear-known-spells').click(function () {
    dndSpellbook.state.knownSpells = [];
    localStorage.knownSpells = '';
    dndSpellbook.renderMySpells();
    $(`.modal-backdrop`).remove()
  })
</script>
